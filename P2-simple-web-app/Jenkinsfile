pipeline {
    agent any

    environment {
        IMAGE_NAME = "simple-web-app"
        CONTAINER_NAME = "webapp"
        HOST_PORT = "8081"
        CONTAINER_PORT = "80"
        GIT_COMMIT_SHORT = "${GIT_COMMIT.substring(0,7)}" // short commit hash
        IMAGE_TAG = "${IMAGE_NAME}:${GIT_COMMIT_SHORT}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/example12/simple-web-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_TAG ."
            }
        }

        stage('Deploy Docker Container') {
            steps {
                // Stop and remove old container if exists
                sh "docker rm -f $CONTAINER_NAME || true"
                // Run new container
                sh "docker run -d -p $HOST_PORT:$CONTAINER_PORT --name $CONTAINER_NAME $IMAGE_TAG"
            }
        }

        stage('Run Tests') {
            steps {
                // Fix: ensure test script is executable
                sh "chmod +x ./tests/sample_test.sh"
                sh "./tests/sample_test.sh"
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "âœ… App deployed! Visit: http://<ec2-public-ip>:$HOST_PORT"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
